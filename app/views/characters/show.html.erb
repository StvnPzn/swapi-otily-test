<div class="container">

  <h1 class="text-center py-3"><%= @character.name %></h1>

  <table class="table">

    <thead>
      <tr>
        <th scope="col">Caractéristiques</th>
        <th scope="col">Infos</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <th scope="row">Planète d'origine</th>
        <td><%= @character.planet.name %></td>
      </tr>
      <tr>
        <th scope="row">Taille</th>
        <td><%= @character.height %> cm</td>
      </tr>
      <tr>
        <th scope="row">Poids</th>
        <td><%= @character.mass %> kg</td>
      </tr>
      <tr>
        <th scope="row">Couleur de cheveux</th>
        <td><%= @character.hair_color %></td>
      </tr>
      <tr>
        <th scope="row">Couleur de peau</th>
        <td><%= @character.skin_color %></td>
      </tr>
      <tr>
        <th scope="row">Couleur des yeux</th>
        <td><%= @character.eye_color %></td>
      </tr>
      <tr>
        <th scope="row">Année de naissance</th>
        <td><%= @character.birth_year %></td>
      </tr>
      <tr>
        <th scope="row">Genre</th>
        <td><%= @character.gender %></td>
      </tr>
    </tbody>

  </table>

  <div class="btn-group">
    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
      Films
    </button>
    <ul class="dropdown-menu">
      <% @character.films.each do |film| %>
        <li><%= link_to "#{film.title}", film_path(film), class: "dropdown-item" %></li>
      <% end -%>
    </ul>
  </div>

  <% if !@character.species.empty? %>
    <div class="btn-group">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Espèces
      </button>
      <ul class="dropdown-menu">
        <% @character.species.each do |specie| %>
          <li><%= link_to "#{specie.name}", specie_path(specie), class: "dropdown-item" %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <% if !@character.starships.empty? %>
    <div class="btn-group">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Vaisseaux
      </button>
      <ul class="dropdown-menu">
        <% @character.starships.each do |starship| %>
          <li><%= link_to "#{starship.name}", starship_path(starship), class: "dropdown-item" %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <% if !@character.vehicles.empty? %>
    <div class="btn-group">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Véhicules
      </button>
      <ul class="dropdown-menu">
        <% @character.vehicles.each do |vehicle| %>
          <li><%= link_to "#{vehicle.name}", vehicle_path(vehicle), class: "dropdown-item" %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

</div>
